<h1>Eat Da Burger!</h1>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
	{{burger_name}}

	<button class="eat-burger" data-id="{{id}}" data-devoured="{{devoured}}">
	</button>
</li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="create-form">

