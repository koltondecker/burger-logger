<div class="container-fluid glass">
  <h1>Eat Da Burger!</h1>
  <div class="row">
    <div class="col s12 m6">
      <h3>Ready to be Eaten!</h3>

      <div id="not-devoured-list" class="collection">
        {{#each burgers}}
        {{#unless devoured}}
          <a href="#!" class="collection-item">
            {{burger_name}}
          </a>
          <button class="eat-burger right-align" data-id="{{id}}" data-devoured="{{devoured}}">Eat Da Burger!</button>
        {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="col s12 m6">
      <h3>Devoured!</h3>

      <div id="devoured-list" class="collection">
        {{#each burgers}}
        {{#if devoured}}
          <a href="#!" class="collection-item">
            {{burger_name}}
          </a>
          <button class="delete-burger" data-id="{{id}}" data-devoured="{{devoured}}">Delete Burger!</button>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <h2>Add a Burger</h2>
      <form id="create-form">

        <div class="form-group">
          <label for="ba">Burger Name:</label>
          <input type="text" id="ba" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>




