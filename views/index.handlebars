<div class="container-fluid glass">
  <h1>Eat Da Burger!</h1>
  <div class="row">
    <div class="col s12 m6">
      <h3>Ready to be Eaten!</h3>

      <ul id="not-devoured-list">
        {{#each burgers}}
        {{#unless devoured}}
          <div class="burger-div">
            <li class="burger-item">
              {{burger_name}}
              <button class="eat-burger" data-id="{{id}}" data-devoured="{{devoured}}">Eat Da Burger!</button>
            </li>
          </div>
          
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col s12 m6">
      <h3>Devoured!</h3>

      <ul id="devoured-list">
        {{#each burgers}}
        {{#if devoured}}
        <div class="burger-div">
          <li class="burger-item">
            {{burger_name}}
            <button class="delete-burger" data-id="{{id}}" data-devoured="{{devoured}}">Delete Burger!</button>
          </li>
        </div>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <h2>Add a Burger</h2>
      <form id="create-form">

        <div class="form-group">
          <label for="ba">Burger Name:</label>
          <input type="text" id="ba" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>




